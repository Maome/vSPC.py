# see the following explanation on flags for %pre
# https://fedoraproject.org/wiki/Packaging:ScriptletSnippets
# abort install on errors

if [ $1 -le 1 ]
then
    # the very first time installed
    # create the service user and register the service
    useradd -U vspc
    chkconfig --add vSPCServer
    chkconfig --levels 2345 vSPCServer on
    service vSPCServer start
else
    # the update section
    # when rpm -U or yum update
    service vSPCServer restart
fi
